// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id     Int      @id @default(autoincrement())
  name   String
  sprite String
  types  Type[]
}

model Type {
  id    Int     @id @default(autoincrement())
  name  String
  pokemon Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId Int
}